{
  "info": {
    "name": "Control Carro ESP32 HTTP + MQTT",
    "description": "Colecci√≥n Postman para probar los endpoints del servidor HTTP en el ESP32. Incluye ejemplos para controlar el carro y verificar el estado del servidor.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Mover carro (POST)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"cmd\": \"F\",\n  \"speed\": 150,\n  \"duration\": 2\n}"
        },
        "url": {
          "raw": "http://<IP_DEL_ESP32>/move",
          "protocol": "http",
          "host": [
            "<IP_DEL_ESP32>"
          ],
          "path": [
            "move"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Mover carro (GET)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://<IP_DEL_ESP32>/move?cmd=F&speed=150&duration=2",
          "protocol": "http",
          "host": [
            "<IP_DEL_ESP32>"
          ],
          "path": [
            "move"
          ],
          "query": [
            { "key": "cmd", "value": "F" },
            { "key": "speed", "value": "150" },
            { "key": "duration", "value": "2" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Verificar estado del servidor",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://<IP_DEL_ESP32>/status",
          "protocol": "http",
          "host": [
            "<IP_DEL_ESP32>"
          ],
          "path": [
            "status"
          ]
        }
      },
      "response": []
    }
  ]
}
